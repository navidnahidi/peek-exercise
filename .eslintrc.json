{
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ],
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "max-len": [
            "error",
            {
                "code": 80
            }
        ],
        "indent": [
            "error",
            2
        ]
    }
}